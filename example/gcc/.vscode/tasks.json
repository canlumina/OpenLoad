                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "Build and Flash Debug",
            "dependsOrder": "sequence",
            "dependsOn": [
                "CMake: Build Debug",
                "OpenOCD: Flash Debug"
            ],
            "group": {
